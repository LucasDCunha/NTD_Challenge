<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2 class="h5 mb-0">Log history</h2>

            <div class="d-flex gap-2">
                <span class="badge bg-light text-dark border">Newest first</span>
            </div>
        </div>

        <% if params[:category].blank? && params[:channel].blank? && params[:status].blank? && params[:query].blank? %>
        <%= turbo_stream_from "notification_logs" %>
        <% end %>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Created at</th>
                        <th scope="col">User</th>
                        <th scope="col">Category</th>
                        <th scope="col">Channel</th>
                        <th scope="col">Status</th>
                        <th scope="col">Delivered at</th>
                        <th scope="col">Error</th>
                    </tr>
                </thead>

                <tbody id="notification_logs_rows">
                    <% if notification_logs.empty? %>
                    <tr id="notification_logs_empty_state">
                        <td colspan="7" class="text-center text-muted py-5">
                            <div class="fw-semibold mb-1">No logs found</div>
                            <div class="small">Try adjusting filters or send a message to generate notification records.</div>
                        </td>
                    </tr>
                    <% end %>

                    <%= render partial: "dashboard/log_row", collection: notification_logs, as: :log %>
                </tbody>
            </table>
        </div>

        <%= render "dashboard/pagination", notification_logs: notification_logs %>
    </div>
</div>