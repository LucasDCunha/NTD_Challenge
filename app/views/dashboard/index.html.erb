<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
                <div>
                    <h1 class="h3 mb-1">Notification Logs</h1>
                    <p class="text-muted mb-0">
                        Browse delivery records, filter by category/channel/status, and search users.
                    </p>
                </div>

                <div class="d-flex gap-2">
                    <%= link_to "Send a message", new_message_path, class: "btn btn-outline-primary" %>
                </div>
            </div>

            <% if notice.present? %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= notice %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% end %>

            <% if alert.present? %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= alert %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% end %>

            <%= render "dashboard/log_filters", categories: @categories, channels: @channels, statuses: @statuses %>
            <%= render "dashboard/log_table", notification_logs: @notification_logs %>

        </div>
    </div>
</div>