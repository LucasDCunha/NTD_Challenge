<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
                <div>
                    <h1 class="h3 mb-1">Send a message</h1>
                    <p class="text-muted mb-0">
                        Submit a categorized message and dispatch notifications to subscribed users.
                    </p>
                </div>

                <div class="d-flex gap-2">
                    <%= link_to "View logs", root_path, class: "btn btn-outline-primary" %>
                </div>
            </div>

            <turbo-frame id="message_form">
                <%= render "form", message: @message, categories: @categories %>
            </turbo-frame>

        </div>
    </div>
</div>